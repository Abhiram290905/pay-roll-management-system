 
CREATE VIEW view_employee_details AS 
SELECT 
e.employee_id, 
CONCAT(e.first_name, ' ', e.last_name) AS full_name, 
e.phone_no, 
e.DOB, 
d.department_name, 
s.supervisor_name 
FROM employee e 
JOIN department d ON e.department_id = d.department_id 
JOIN supervisor s ON e.supervisor_id = s.supervisor_id; 
SELECT *FROM view_employee_details
 
CREATE VIEW view_payroll_summary AS 
SELECT 
e.employee_id, 
CONCAT(e.first_name, ' ', e.last_name) AS employee_name, 
p.date, 
p.status, 
p.net_salary 
FROM payroll p 
JOIN employee e ON p.employee_id = e.employee_id; 
SELECT *FROM view_payroll_summary
CREATE VIEW view_overtime_details AS 
SELECT 
e.employee_id, 
CONCAT(e.first_name, ' ', e.last_name) AS employee_name, 
o.hours_worked, 
o.overtime_pay 
FROM overtime o 
JOIN employee e ON o.employee_id = e.employee_id; 
SELECT *FROM view_overtime_details
